<!DOCTYPE html>
<html>
  <head>
    <title>Lendrapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i,700,900|Muli:200,300,400,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/datedropper3@3.0.0/datedropper.css"> 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
  <%# Lendr: Add Navigation links to appear on every view %>
    <%= render 'partials/header' %>

    <%= yield %>


<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>

<script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/js/jquery.nice-select.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/datedropper3@3.0.0/datedropper.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.js"></script>


<script>

$(document).on('turbolinks:load', function() {
    $('.image-slider').slick({
    dots: true,
    infinite: true,
    slidesToShow: 1,
    slidesToScroll: 1, 
    speed: 300,
    adaptiveHeight: true,
    centerMode: true,
  });

    $('select').niceSelect();
    $('input.calendar').dateDropper();

});

</script>

  </body>
</html>


